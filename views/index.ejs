  <script>
    var typed = new Typed('#element', {
      strings: ['BUY Plot', 'SELL Land', 'RENT Flat'],
      typeSpeed: 103,
      loop: true
    });
    var swiper = new Swiper(".mySwiper", {
      spaceBetween: 30,
      centeredSlides: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  </script>
  <script src="/javascripts/animation.js" type="module" defer></script>
  <script>
    localStorage.setItem("todo", "BUY")
    const search_btn = document.querySelector("#search button")
    const search_box = document.querySelector("#search input")
    const component = document.querySelectorAll(".components")
    const searchit = () => {
      if (search_box.value.trim() !== "") {
        window.location.href = `/search?q=${search_box.value}&p=${localStorage.getItem("todo").trim()}`
      } else {
        window.location.href = `/search?p=${localStorage.getItem("todo").trim()}`
      }
    }
    search_btn.addEventListener("click", searchit)
    search_box.addEventListener("keypress", (event) => {
      if (event.key === "Enter") {
        search_btn.click()
      }
    })
    const login_btn = document.querySelector("#nav ul button")
    login_btn.addEventListener("click", () => {
      window.location.href = "/?login=true&scroll=true"
    })
    component[0].style.color = "royalblue"
    component[0].addEventListener("click", ()=>{
      window.location.href = "/"
    })
    component[1].addEventListener("click", ()=>{
      window.location.href = "/search"
    })
  </script>
  <script>
    let registerForm = document.getElementById("registerForm")
    let submitButton = document.querySelector("#registerForm button")
    let checkBox = document.getElementById("checkbox")
    registerForm.addEventListener("submit", (e)=>{
      if (!checkBox.checked) {
        e.preventDefault()
      }
      submitButton.disable = true
    })
    let eyes = document.getElementsByClassName("eye")[0]
    eyes.addEventListener("click", ()=>{
      if(eyes.src.endsWith("/images/eye-close.png")){
        eyes.src = "/images/eye-open.png"
        eyes.parentElement.firstElementChild.setAttribute("type", "text")
      }
      else{
        eyes.src = "/images/eye-close.png"
        eyes.parentElement.firstElementChild.setAttribute("type", "password")
      }
    })
  </script>
  <% if(scroll=="true"){ %>
    <script>
      window.onload = ()=>{
      const scroll = (elem) => {
        locoScroll.scrollTo(elem);
        ScrollTrigger.create({
          trigger: elem,
          start: 'top 0%'
        });
      }
      scroll("#register")
    }
    </script>
    <% } %>
